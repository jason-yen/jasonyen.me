<body>
  <div class="main-title">Rubik's Cube Solver</div>

  <div class="layout-container">
    <!-- Color Picker -->
    <div class="color-picker-vertical">
      <div class="color-button" style="background-color: white;" onclick="changeColor('U')"></div>
      <div class="color-button" style="background-color: yellow;" onclick="changeColor('D')"></div>
      <div class="color-button" style="background-color: green;" onclick="changeColor('F')"></div>
      <div class="color-button" style="background-color: blue;" onclick="changeColor('B')"></div>
      <div class="color-button" style="background-color: orange;" onclick="changeColor('L')"></div>
      <div class="color-button" style="background-color: red;" onclick="changeColor('R')"></div>
    </div>

    <!-- Cube Faces -->
    <div class="cube-ui">
      <div class="face"><h3>Up (U)</h3><div class="grid" id="U"></div></div>
      <div class="face"><h3>Right (R)</h3><div class="grid" id="R"></div></div>
      <div class="face"><h3>Front (F)</h3><div class="grid" id="F"></div></div>
      <div class="face"><h3>Down (D)</h3><div class="grid" id="D"></div></div>
      <div class="face"><h3>Left (L)</h3><div class="grid" id="L"></div></div>
      <div class="face"><h3>Back (B)</h3><div class="grid" id="B"></div></div>

      <button id="replayButton" onclick="solveAndDisplay()">Solve Cube</button>
      <div id="solution"></div>
    </div>
  </div>

  <script>
    const faces = ['U', 'R', 'F', 'D', 'L', 'B'];
    const cube = {};
    let currentColor = 'U'; // Default color

    window.onload = () => {
      faces.forEach(face => {
        cube[face] = Array(9).fill(face);
        const container = document.getElementById(face);
        for (let i = 0; i < 9; i++) {
          const cell = document.createElement('div');
          cell.className = 'cell';
          cell.id = `${face}${i}`;
          cell.onclick = () => selectColor(face, i);
          cell.style.backgroundColor = getColorHex(cube[face][i]);
          container.appendChild(cell);
        }
      });
    };

    function getColorHex(code) {
      return {
        U: '#FFFFFF', // white
        D: '#FFFF00', // yellow
        F: '#008000', // green
        B: '#0000FF', // blue
        L: '#FFA500', // orange
        R: '#FF0000'  // red
      }[code] || '#FFFFFF';
    }

    function changeColor(color) {
      currentColor = color;
    }

    function selectColor(face, index) {
      cube[face][index] = currentColor;
      document.getElementById(face + index).style.backgroundColor = getColorHex(currentColor);
    }

    // Validate the cube state
    function isValidCubeState() {
      const colorCounts = {
        U: {},
        D: {},
        F: {},
        B: {},
        L: {},
        R: {}
      };

      faces.forEach(face => {
        cube[face].forEach(color => {
          colorCounts[face][color] = (colorCounts[face][color] || 0) + 1;
          if (colorCounts[face][color] > 9) {
            alert(`Too many ${color} colors on face ${face}!`);
            return false;
          }
        });
      });
      return true;
    }

    function cubeToString() {
      const state = ['U', 'R', 'F', 'D', 'L', 'B'].map(face => {
        return cube[face].join('');
      }).join('');
      
      if (state.length !== 54) {
        alert("Cube state is invalid. It must be exactly 54 characters.");
        return null;
      }

      return state;
    }

    function solveAndDisplay() {
      if (!isValidCubeState()) return;

      try {
        const state = cubeToString(); // Get the cube state
        if (state === null) {
          alert('Invalid cube state.');
          return;
        } // Exit if invalid state

        console.log("Cube State: ", state);

        // Using a basic fallback solver for demonstration
        const solution = solveRubiksCube(state); // You should replace this with a proper solver
        if (!solution) {
          alert('No solution found or invalid state!');
          return;
        }

        const moves = solution.trim().split(/\s+/);
        document.getElementById('solution').innerText = 'Solving...';
        animateSolution(moves);
        setTimeout(() => {
          document.getElementById('solution').innerText = 'Solution: ' + moves.join(' ');
        }, moves.length * 500);
      } catch (err) {
        alert('Error solving cube: ' + err.message);
      }
    }

    function solveRubiksCube(state) {
      // Replace with actual Rubik's cube solver logic
      // Here, just as a placeholder, we'll simulate the solver
      // Example move sequence: "U R U' R' U' R' U' R' U R' U2 R2"
      return "U R U' R' U' R' U' R' U R' U2 R2";
    }

    function animateSolution(moves) {
      let i = 0;
      function next() {
        if (i < moves.length) {
          performMove(moves[i]);
          i++;
          setTimeout(next, 500);
        }
      }
      next();
    }

    function performMove(move) {
      const face = move[0];
      const mod = move[1] || '';
      let times = 1;
      if (mod === '2') times = 2;
      if (mod === "'") times = 3;
      for (let i = 0; i < times; i++) {
        rotateFaceClockwise(face);
      }
    }

    function rotateFaceClockwise(face) {
      const temp = [...cube[face]];
      cube[face][0] = temp[6];
      cube[face][1] = temp[3];
      cube[face][2] = temp[0];
      cube[face][3] = temp[7];
      cube[face][4] = temp[4];
      cube[face][5] = temp[1];
      cube[face][6] = temp[8];
      cube[face][7] = temp[5];
      cube[face][8] = temp[2];
      for (let i = 0; i < 9; i++) {
        document.getElementById(face + i).style.backgroundColor = getColorHex(cube[face][i]);
      }
    }
  </script>
</body>
